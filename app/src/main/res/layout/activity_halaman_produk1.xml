<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanProduk1">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="80dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="#EDDFB3"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="81dp"
            android:onClick="kkl"
            android:layout_height="35dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            app:srcCompat="@drawable/exit"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="80dp"
            android:text="Produk"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView49"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="320dp"
            app:srcCompat="@drawable/tampilanhome"
            tools:layout_editor_absoluteX="288dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:onClick="ckt"
            android:id="@+id/imageButton18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:background="#FEFEFE"
            app:srcCompat="@drawable/shop" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Product"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <View
            android:id="@+id/view5"
            android:layout_width="286dp"
            android:layout_height="180dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="63dp"
            android:background="@drawable/shapeinput6"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="287dp"
            android:layout_height="164dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="64dp"
            android:background="#ffff"
            tools:srcCompat="@drawable/lensa2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kumi"
            android:textSize="34sp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="63dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR 579.000"
            android:textSize="20sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="63dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="19dp">

        <View
            android:id="@+id/view2"
            android:layout_width="375dp"
            android:layout_height="351dp"
            android:background="@drawable/shapeinput9"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="9dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName1"
            android:layout_width="366dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Merek : Stainless steel"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="9dp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="366dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Size : Averafe"
            android:layout_marginTop="84dp"
            android:layout_marginLeft="9dp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Premium Lens"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="9dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli Hanya Frame"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="30dp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli dengan Lensa"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="Jenis lensa"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="70dp"
            android:inputType="textPersonName"/>

        <ImageButton
            android:id="@+id/imageButton20"
            android:layout_width="30dp"
            android:layout_height="39dp"
            android:background="#F1EAEA"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/produk" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Resep Dokter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="60dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="258dp"
            android:layout_height="43dp"
            android:backgroundTint="#EDDFB3"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="60dp"
            android:onClick="pli"
            android:text="Tambahkan Ke Keranjang" />
    </FrameLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>